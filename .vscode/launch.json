{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Node.js",
      "type": "node",
      "request": "attach",
      "port": 9230,
      "skipFiles": ["<node_internals>/**"],
      "restart": true,
      "sourceMaps": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}"
    },
    {
      "name": "Launch Next.js (Dev)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "pnpm",
      "runtimeArgs": ["dev"],
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "console": "integratedTerminal"
    }
  ]
}
